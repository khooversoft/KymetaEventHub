                        <button class="button is-outlined" onclick="document.cookie = 'timePreference=@(timePreference == "utc" ? "local" : "utc"); path=/'; window.location.reload(true);" title="Change date timezone display">
                            <span>Dates in <strong class="has-text-uppercase">@timePreference</strong> format.</span>
                        </button>
                    </div>*@
                    <div class="navbar-item">
                        <a class="button is-light" asp-controller="Authentication" asp-action="Logout">
                            Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </div>
      

      
     </nav>
     @RenderBody()
